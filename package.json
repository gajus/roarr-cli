{
  "author": {
    "email": "gajus@gajus.com",
    "name": "Gajus Kuizinas",
    "url": "http://gajus.com"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "files": [
      "test/roarr/**/*"
    ],
    "require": [
      "ts-node/register/transpile-only"
    ]
  },
  "bin": {
    "roarr": "dist/src/bin/index.js"
  },
  "dependencies": {
    "chalk": "^4.1.1",
    "es6-error": "^4.1.1",
    "json5": "^2.2.0",
    "prettyjson": "^1.2.1",
    "roarr": "^4.2.5",
    "searchjs": "^1.1.0",
    "socket.io-client": "^4.1.1",
    "split2": "^3.2.2",
    "throttle-debounce": "^3.0.1",
    "uuid": "^8.3.2",
    "yargs": "^17.0.1"
  },
  "description": "A CLI program for Roarr logger.",
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/yargs": "^16.0.1",
    "ava": "^3.15.0",
    "coveralls": "^3.1.0",
    "del-cli": "^3.0.1",
    "eslint": "^7.26.0",
    "eslint-config-canonical": "^26.2.3",
    "husky": "^6.0.0",
    "nyc": "^15.1.0",
    "semantic-release": "^17.4.3",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  },
  "engines": {
    "node": ">=10"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run test && npm run build"
    }
  },
  "keywords": [
    "log",
    "logger",
    "json"
  ],
  "name": "@roarr/cli",
  "repository": {
    "type": "git",
    "url": "git@github.com:gajus/roarr-cli.git"
  },
  "scripts": {
    "build": "del-cli ./dist && tsc",
    "dev": "tsc --watch",
    "lint": "eslint ./src ./test && tsc --noEmit",
    "test": "NODE_ENV=test ava --serial --verbose"
  },
  "version": "1.0.0"
}
