{
  "author": {
    "email": "gajus@gajus.com",
    "name": "Gajus Kuizinas",
    "url": "http://gajus.com"
  },
  "ava": {
    "babel": {
      "compileAsTests": [
        "test/helpers/**/*"
      ]
    },
    "files": [
      "test/roarr/**/*"
    ],
    "require": [
      "@babel/register"
    ]
  },
  "bin": {
    "roarr": "dist/bin/index.js"
  },
  "dependencies": {
    "chalk": "^4.1.0",
    "es6-error": "^4.1.1",
    "json5": "^2.1.3",
    "prettyjson": "^1.2.1",
    "roarr": "^3.2.0",
    "searchjs": "^1.1.0",
    "split2": "^3.2.2",
    "ulid": "^2.3.0",
    "yargs": "^16.2.0"
  },
  "description": "A CLI program for Roarr logger.",
  "devDependencies": {
    "@ava/babel": "^1.0.1",
    "@babel/cli": "^7.12.10",
    "@babel/core": "^7.12.10",
    "@babel/node": "^7.12.10",
    "@babel/plugin-transform-flow-strip-types": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@babel/register": "^7.12.10",
    "ava": "^3.14.0",
    "babel-plugin-istanbul": "^6.0.0",
    "coveralls": "^3.1.0",
    "eslint": "^7.16.0",
    "eslint-config-canonical": "^24.4.4",
    "flow-bin": "^0.141.0",
    "flow-copy-source": "^2.0.9",
    "husky": "^4.3.6",
    "nyc": "^15.1.0",
    "semantic-release": "^17.3.0"
  },
  "engines": {
    "node": ">=10.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run test && npm run build"
    }
  },
  "keywords": [
    "log",
    "logger",
    "json"
  ],
  "name": "@roarr/cli",
  "nyc": {
    "all": true,
    "include": [
      "src/**/*.js"
    ],
    "instrument": false,
    "reporter": [
      "html",
      "text-summary"
    ],
    "require": [
      "@babel/register"
    ],
    "silent": true,
    "sourceMap": false
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:gajus/roarr-cli.git"
  },
  "scripts": {
    "build": "rm -fr ./dist && NODE_ENV=production babel ./src --out-dir ./dist --copy-files --source-maps && flow-copy-source src dist",
    "dev": "NODE_ENV=production babel ./src --out-dir ./dist --copy-files --source-maps --watch",
    "lint": "eslint ./src ./test && flow",
    "test": "NODE_ENV=test ava --serial --verbose"
  },
  "version": "1.0.0"
}
